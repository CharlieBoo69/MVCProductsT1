@model IEnumerable<MVCProductsT1.Models.Product>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Añadimos el botón de Logout -->
            <div class="d-flex justify-content-between mb-3">
                <h2>Product List</h2>
                <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Logout</a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Product List</h2>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="fas fa-plus"></i> Create New Product
                    </a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mr-2">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">No products available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
